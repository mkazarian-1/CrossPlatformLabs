@model Lab5.Models.UserProfileViewModel
@{
ViewData["Title"] = "User Profile";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<div class="container my-5">
    <div class="card profile-container shadow-sm">
        <div class="card-body">
            <div class="profile-header d-flex align-items-center mb-4">
                <img src="@Model.ProfileImage" alt="Profile Image" class="rounded-circle img-thumbnail" width="100" height="100" />
                <h2 class="ms-3 mb-0">@Model.FullName</h2>
            </div>

            <div class="profile-info">
                <p>
                    <i class="fas fa-id-badge text-primary"></i>
                    <strong>Full Name:</strong> @Model.FullName
                </p>
                <p>
                    <i class="fas fa-user text-primary"></i>
                    <strong>Username:</strong> @Model.UserName
                </p>
                <p>
                    <i class="fas fa-envelope text-primary"></i>
                    <strong>Email:</strong> @Model.Email
                </p>
                <p>
                    <i class="fas fa-phone text-primary"></i>
                    <strong>Phone:</strong> @Model.Phone
                </p>
            </div>

            <form asp-controller="Account" asp-action="Logout" method="post" class="mt-4">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>
    </div>
</div>
